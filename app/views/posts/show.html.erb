<h1 class="title">
  <%= @post.title %>
</h1>
<h2 class="image">
  <%= image_tag @post.image.url(:medium) %>
</h2>
<p class ='date'>
  Posted <%= time_ago_in_words(@post.created_at) %> Ago
</p>
<div id="comments">
  <h2><%= @post.comments.count %> Comments</h2>
  <%= render @post.comments %>

  <h3>Add a comment:</h3>
  <%= render "comments/form" %>

</div>